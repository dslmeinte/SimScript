grammar com.simlike.simscript.application.SimApplicationDsl with org.eclipse.xtext.common.Terminals

generate simApplicationDsl "http://www.simlike.com/simscript/application/SimApplicationDsl"

import "http://www.simlike.com/simscript/ui/SimUiDsl" as ui


ApplicationModel:
	'application'
		'title' '=' title=STRING
		'target-platform' '=' targetPlatform=TargetPlatforms
		('include-css' includeCSSs+=STRING*)?
		defaultCSS?='with-default-css'?
		'included-modules' includedModules+=[ui::UiModule]*
		'entry-module' '=' entryModule=[ui::UiModule]
		('include-custom-JavaScript' includeCustomJS+=STRING*)?
		genericBackButtonPrevention?='with-generic-back-button-prevention'?
	;
	// scoping: entryModule in [containing(ApplicationModel)].modules	[âˆš]


enum TargetPlatforms:
	html5 | facebook | mobile
	;

